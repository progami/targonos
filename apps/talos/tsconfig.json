{
  "extends": "../../tsconfig.nextjs.json",
  "compilerOptions": {
    "target": "ES2020",
    "strict": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "removeComments": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "paths": {
      "@/*": ["./src/*"],
      "@targon/ledger": ["../../packages/ledger/src"]
    },
    "types": ["node"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}

{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@targon/ui": ["packages/ui/src"],
      "@targon/theme": ["packages/theme/src"],
      "@targon/config": ["packages/config/src"],
      "@targon/logger": ["packages/logger/src"],
      "@targon/ledger": ["packages/ledger/src"],
      "@targon/amazon-sp-api": ["packages/amazon-sp-api/dist"]
    }
  }
}
